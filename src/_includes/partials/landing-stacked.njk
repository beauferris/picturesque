<div class="landing">
  <div >
    {% include "partials/breadcrumbs.njk" %}
    
    <div class="landing-stacked-content govuk-width-container">
      <h2 style="margin:30px 0;max-width:35rem" class="govuk-heading-xl">{{title}}</h2>
      <h2 class="govuk-body-lead">{{description}}</h2>

      {% if button_title %}
        <a style="margin:0;margin-top:30px" href={{button_link}} class="govuk-button govuk-button--start">{{button_title}}</a>
      {% endif %}
    </div>

    {% if image_url %}
      <div class="landing-stacked-image">
        <img style="width:100%;border-radius:5px;object-fit: cover;margin:0;" src={{image_url}} alt={{description}}/>
      </div>
    {% endif %}
  </div>
</div>
