<div class="landing" >
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half" >
        {% include "partials/breadcrumbs.njk" %}

        <h2 style="margin:30px 0;max-width:35rem" class="govuk-heading-xl">{{title | safe}}</h2>
        <h2 class="govuk-body-lead">{{description}}</h2>

        {% if button_title %}
          <a style="margin-top:30px" href={{button_link}} class="govuk-button govuk-button--start">{{button_title}}</a>
        {% endif %}
      </div>
      <div class="govuk-grid-column-one-half">
        {% if image_url %}
          <img style="width:100%;height:100%; height:400px;border-radius:5px;object-fit: cover;margin: 30px 0;" src={{image_url}} alt={{description}}/>
        {% endif %}
      </div>
    </div>
  </div>
</div>
